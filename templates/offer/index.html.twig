{% extends 'admin.html.twig' %}

{% block title %}Offer index{% endblock %}

{% block body %}
    <h1>Offer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Description</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Title</th>
                <th>Type</th>
                <th>Location</th>
                <th>DateClosing</th>
                <th>Salary</th>
                <th>DateCreated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.id }}</td>
                <td>{{ offer.reference }}</td>
                <td>{{ offer.description }}</td>
                <td>{{ offer.status ? 'Yes' : 'No' }}</td>
                <td>{{ offer.notes }}</td>
                <td>{{ offer.title }}</td>
                <td>{{ offer.type }}</td>
                <td>{{ offer.location }}</td>
                <td>{{ offer.dateClosing ? offer.dateClosing|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ offer.salary }}</td>
                <td>{{ offer.dateCreated ? offer.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('offer_show', {'id': offer.id}) }}">show</a>
                    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('offer_new') }}">Create new</a>
{% endblock %}
